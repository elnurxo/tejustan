@model Slider
@{
    ViewData["Title"] = "Edit";
}
<head>
    <script src="https://kit.fontawesome.com/51866e0675.js" crossorigin="anonymous"></script>
</head>

<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Slider Edit</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Edit Slider :)</div>
                        <hr>
                        <h6>Create Date: <span class="text-info">@Model.CreatedAt</span></h6>
                        <h6>Last Update Date: <span class="text-info">@Model.LastUpdateDate</span></h6>
                        <hr>
                        <form asp-action="edit" method="post" enctype="multipart/form-data">

                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="Title1">Enter Title 1</label>
                                    <input class="form-control" asp-for="Title1" placeholder="Title 1">
                                    <span class="text-danger" asp-validation-for="Title1"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="Title2">Enter Title 2</label>
                                    <input class="form-control" asp-for="Title2" placeholder="Title 2">
                                    <span class="text-danger" asp-validation-for="Title2"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="BtnText" class="mt-2">Enter Button Text</label>
                                    <input class="form-control" asp-for="BtnText" placeholder="Button Text">
                                    <span class="text-danger" asp-validation-for="BtnText"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="BtnUrl" class="mt-2">Enter Button URL</label>
                                    <input class="form-control" asp-for="BtnUrl" placeholder="Button URL">
                                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="Order" class="mt-2">Enter Order</label>
                                    <input class="form-control" asp-for="Order" min="0" placeholder="Order">
                                    <span class="text-danger" asp-validation-for="Order"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="ImageFile" class="mt-2">Enter ImageFile</label>
                                    <input class="form-control" asp-for="ImageFile" placeholder="ImageFile">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                    @if (Model.Image != null)
                                    {
                                        <div class="img-box mt-2" style="position:relative;display:inline-block">
                                            <input type="hidden" name="Image" value="@Model.Image" />
                                            <img width="250" src="~/uploads/sliders/@Model.Image" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group mt-2">
                                <label for="exampleFormControlTextarea1" asp-for="Desc">Description</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="Desc"></textarea>
                            </div>

                            <button type="submit" class="btn btn-light px-5">EDIT</button>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>

</div>
