@model Color
@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex justify-content-between m-4">
                    <h3>Color Create</h3>
                    <a asp-action="index" class="btn btn-success">Go Back</a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Create New Color :)</div>
                        <hr>
                        <form asp-action="create" method="post">

                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="Name">Enter Color Name</label>
                                    <input class="form-control" asp-for="Name" placeholder="Name">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="HexValue">Enter Color Hex Value (Don't use #')</label>
                                    <input class="form-control" asp-for="HexValue" placeholder="Hex Value">
                                    <span class="text-danger" asp-validation-for="HexValue"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-light px-5 mt-4">CREATE</button>
                        </form>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
        <!--start overlay-->
        <div class="overlay toggle-menu"></div>
        <!--end overlay-->

    </div>

</div>





