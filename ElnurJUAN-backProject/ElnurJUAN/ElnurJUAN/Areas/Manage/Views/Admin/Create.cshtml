@model AdminRegisterViewModel

@{
    ViewData["Title"] = "Register";
}



    <!-- login register wrapper end -->
    <div class="content-wrapper" style="margin-left:-25px;padding-top:0px">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex justify-content-between m-4">
                        <h3>Admin Create</h3>
                        <a asp-action="index" class="btn btn-success">Go Back</a>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">Create New Admin :)</div>
                            <hr>
                            <form asp-action="create" method="post">
                                <div class="form-row">
                                    <div class="form-group col-lg-6">
                                        <label asp-for="FullName">Full Name</label>
                                        <input class="form-control" asp-for="FullName" placeholder="Enter Full Name">
                                        <span class="text-danger" asp-validation-for="FullName"></span>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label asp-for="UserName">User Name</label>
                                        <input class="form-control" asp-for="UserName" placeholder="Enter User Name">
                                        <span class="text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-lg-12">
                                        <label asp-for="Email">E-Mail</label>
                                        <input class="form-control" asp-for="Email" placeholder="Enter E-Mail">
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-lg-4">
                                        <label asp-for="Password">Password</label>
                                        <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group col-lg-4">
                                        <label asp-for="ConfirmPassword">Confirm Password*</label>
                                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                      <div class="text-danger" asp-validation-summary="ModelOnly"></div>                                  
                                   </div>
                                  <div>
                                </div>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

